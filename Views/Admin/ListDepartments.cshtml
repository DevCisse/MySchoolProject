@model IEnumerable<MySchoolProject.Models.Department>

@{
    ViewData["Title"] = "Departments List";

}
<!--overview start-->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Dashboard</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="fa fa-laptop"></i>Dashboard</li>
        </ol>
    </div>
</div>



<h2> <a asp-action="AddDepartment" asp-controller="Admin" class="btn btn-primary"> Add Department</a> <a asp-action="ListFaculties" class="btn btn-primary"> List Faculties</a> </h2>



@if (Model.Any())
{
    <div class="col-sm-6">
        <section class="panel">
            <header class="panel-heading">
                List of Faculties
            </header>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th> Name</th>
                        <th> Faculty</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>  @item.Id</td>
                            <td> <a asp-action="EditDepartment" asp-route-id="@item.Id" asp-controller="Admin">  @item.Name</a>  </td>
                            <td>@item.Faculty.Name</td>

                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>

}
else
{
    <h2>No Faculties presently</h2> <a asp-action="AddDepartment" asp-controller="Admin" class="btn btn-primary"> Add Department</a>
}





<!-- Today status end -->
